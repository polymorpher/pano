{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,     
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "*.ts": ["*"]
    }
  },
  "include": ["./src", "./"]
}
